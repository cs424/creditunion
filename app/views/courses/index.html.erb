<h1>Courses</h1>

<% @courses.group_by(&:year).each do |year, courses| %>
  <h2><%= year %></h2>
  <ul>
    <% courses.each do |course| %>
      <li>
        <strong><%= link_to course.code, course %></strong>
	<%= course.name %>
      </li>
    <% end %>
  </ul>
<% end %>


<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td><%= course.year %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
