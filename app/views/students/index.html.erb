<h1>Students</h1>

<table>
  <tbody>
    <% @students.each.with_index(1) do |student, index| %>
      <tr>
	<td align="right"><%= index %>.</td>
        <td><%= link_to student.number, student %></td>
        <td><%= student.last_first %></td>
      </tr>
    <% end %>
  </tbody>
</table>

