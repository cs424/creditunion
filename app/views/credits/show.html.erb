<p id="notice"><%= notice %></p>

<h3><%= link_to @credit.course, @credit.course %> Credits</h3>
<h1><%= @credit.name %></h1>

<p>
  <strong>Weight:</strong>
  <%= @credit.weight %>
</p>

<p>
  <strong>Discard:</strong>
  <%= @credit.discard %>
</p>

<ul class="list-group">
  <% @credit.tasks.each do |task| %>
  <li class="list-group-item">
    <%= task.date %>
    (<%= task.points %> points)
    <%= link_to task, task %>
  </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_credit_path(@credit) %> |
<%= link_to 'Destroy', @credit, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', credits_path %>
